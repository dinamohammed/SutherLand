<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Form View-->
    <record id="view_employee_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="job_title" position="replace">
                <field name="job_title_id" placeholder="المسمي الوظيفي"/>
            </field>
        </field>
    </record>

    <record id="view_hr_reassignment_form" model="ir.ui.view">
        <field name="name">hr.reassignment</field>
        <field name="model">hr.reassignment</field>
        <field name="arch" type="xml">
            <form string="اعادة تعيين">
                <sheet>
                    <div class="oe_title">
                        <group>
                            <h1>
                                <field name="name" readonly="0"/>
                            </h1>
                        </group>
                    </div>
                    <group>
                        <group string="بيانات الموظف">
                            <field name="employee_id" string="Employee"/>
                            <field name="job_full_name" string="الوظيفة الحالية"/>
                            <field name="certificate" string="المؤهل الحالي"/>
                        </group>
                        <group string="الوظيفة الجديدة">
                            <field name="date_reassignment" string="التاريخ"/>
                            <field name="new_certificate" string="المؤهل الجديد"/>
                            <separator/>
                            <field name="functional_job_id" string="المجموعة الوظيفية"/>
                            <field name="qualitative_job_id" string="المجموعة النوعية"/>
                            <field name="job_title_id" string="الوظيفة"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Tree View-->
    <record id="view_hr_reassignment_tree" model="ir.ui.view">
        <field name="name">hr.reassignment</field>
        <field name="model">hr.reassignment</field>
        <field name="arch" type="xml">
            <tree string="اعادة تعيين">
                <field name="employee_id" string="Employee"/>
                <field name="certificate" string="المؤهل الحالي"/>
                <field name="new_certificate" string="المؤهل الجديد"/>
                <field name="date_reassignment" string="التاريخ"/>
                <field name="functional_job_id" string="المجموعة الوظيفية"/>
                <field name="qualitative_job_id" string="المجموعة النوعية"/>
                <field name="job_title_id" string="الوظيفة"/>
            </tree>
        </field>
    </record>

    <!--Action-->
    <record id="open_view_hr_reassignment" model="ir.actions.act_window">
        <field name="name">اعادة تعيين</field>
        <field name="res_model">hr.reassignment</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                انشئ اعادة تعيين...
            </p>
        </field>
    </record>

    <!--Menuitems-->
    <menuitem
            id="menu_hr_reassignment"
            name="اعادة تعيين"
            action="open_view_hr_reassignment"
            parent="hr.menu_hr_employee_payroll"
            sequence="5"/>

</odoo>
